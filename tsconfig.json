{
	"compilerOptions": {
		"experimentalDecorators": true,
		"target": "es6",
		"module": "commonjs",
		"outDir": "build",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"declaration": true,
		"emitDecoratorMetadata": true,
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "build"]
}